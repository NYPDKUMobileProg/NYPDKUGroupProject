<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cashie.cashie.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="@string/e_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/register_email_field"
        android:id="@+id/register_email_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_column="2"
        android:id="@+id/register_email_field" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:labelFor="@+id/register_password_field"
        android:id="@+id/register_password_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_column="2"
        android:ems="10"
        android:id="@+id/register_password_field" />

    <TextView
        android:text="@string/confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:labelFor="@+id/confirm_password_field"
        android:id="@+id/confirm_password_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_column="2"
        android:ems="10"
        android:id="@+id/confirm_password_field" />

    <Button
        android:text="@string/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:id="@+id/register_submit_button"
        android:layout_gravity="end"
        android:onClick="onRegisterSubmitPressed" />

</GridLayout>
