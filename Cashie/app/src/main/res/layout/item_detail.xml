<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    tools:context="com.example.cashie.cashie.ItemDetailFragment" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_item_placeholder"
        android:id="@+id/item_detail_image"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_height="160dp" />

    <TextView
        android:text="Piece: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/item_detail_piece" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_piece_field" />

    <TextView
        android:text="Size: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/item_detail_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_size_field" />

    <TextView
        android:text="Maker: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/item_detail_maker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_maker_field" />

    <TextView
        android:text="Fabric: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="4"
        android:layout_column="0"
        android:id="@+id/item_detail_fabric" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_fabric_field" />

    <TextView
        android:text="Price: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="5"
        android:layout_column="0"
        android:id="@+id/item_detail_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_price_field" />

    <TextView
        android:text="Color: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="6"
        android:layout_column="0"
        android:id="@+id/item_detail_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_color_field" />

    <TextView
        android:text="Cut: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="7"
        android:layout_column="0"
        android:id="@+id/item_detail_cut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_cut_field" />

    <TextView
        android:text="Seller: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_row="8"
        android:layout_column="0"
        android:id="@+id/item_detail_seller" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_detail_seller_field" />

</GridLayout>
